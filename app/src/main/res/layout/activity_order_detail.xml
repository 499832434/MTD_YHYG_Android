<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
              android:orientation="vertical"
            android:layout_height="match_parent">
    <com.htyhbz.yhyg.view.CustomTitleBar
            android:id="@+id/customTitleBar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            custom:text="查看订单"
            />
    <ScrollView android:layout_width="match_parent"
                android:background="#ffffff"
                android:id="@+id/SV"
                android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="wrap_content">

            <LinearLayout android:layout_width="match_parent"
                          android:padding="10dp"
                          android:background="#f2f2f2"
                          android:orientation="vertical"
                          android:layout_height="wrap_content">
                <LinearLayout android:layout_width="match_parent"
                              android:background="#ffffff"
                              android:orientation="horizontal"
                              android:layout_height="40dp">
                    <ImageView android:layout_width="40dp"
                               android:src="@drawable/icon_order_gprs"
                               android:scaleType="centerInside"
                               android:layout_height="40dp"/>
                    <TextView android:layout_width="match_parent"
                              android:gravity="center_vertical"
                              android:textColor="#333333"
                              android:layout_marginRight="5dp"
                              android:background="@drawable/ic_bg_order_bottom"
                              android:text="山东省淄博市张店区"
                              android:textSize="14sp"
                              android:layout_height="40dp"/>

                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:orientation="horizontal"
                              android:background="#ffffff"
                              android:layout_height="40dp">
                    <TextView android:layout_width="match_parent"
                              android:gravity="center_vertical"
                              android:textColor="#333333"
                              android:layout_marginRight="5dp"
                              android:layout_marginLeft="40dp"
                              android:background="@drawable/ic_bg_order_bottom"
                              android:text="中润华侨城"
                              android:textSize="14sp"
                              android:layout_height="40dp"/>

                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:orientation="horizontal"
                              android:background="#ffffff"
                              android:layout_height="40dp">
                    <ImageView android:layout_width="40dp"
                               android:src="@drawable/icon_order_time"
                               android:scaleType="centerInside"
                               android:layout_height="40dp"/>
                    <TextView android:layout_width="match_parent"
                              android:gravity="center_vertical"
                              android:layout_marginRight="5dp"
                              android:textColor="#333333"
                              android:background="@drawable/ic_bg_order_bottom"
                              android:text="上午11:00"
                              android:textSize="14sp"
                              android:layout_height="40dp"/>

                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:orientation="horizontal"
                              android:background="#ffffff"
                              android:layout_height="40dp">
                    <ImageView android:layout_width="40dp"
                               android:src="@drawable/icon_order_telephone"
                               android:scaleType="centerInside"
                               android:layout_height="40dp"/>
                    <TextView android:layout_width="match_parent"
                              android:gravity="center_vertical"
                              android:textColor="#333333"
                              android:layout_marginRight="5dp"
                              android:background="@drawable/ic_bg_order_bottom"
                              android:text="18753319519"
                              android:textSize="14sp"
                              android:layout_height="40dp"/>

                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:orientation="horizontal"
                              android:background="#ffffff"
                              android:layout_height="40dp">
                    <ImageView android:layout_width="40dp"
                               android:src="@drawable/icon_order_name"
                               android:scaleType="centerInside"
                               android:layout_height="40dp"/>
                    <TextView android:layout_width="match_parent"
                              android:gravity="center_vertical"
                              android:textColor="#333333"
                              android:layout_marginRight="5dp"
                              android:background="@drawable/ic_bg_order_bottom"
                              android:text="张三"
                              android:textSize="14sp"
                              android:layout_height="40dp"/>

                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:orientation="horizontal"
                              android:background="#ffffff"
                              android:layout_height="40dp">
                    <ImageView android:layout_width="40dp"
                               android:src="@drawable/icon_order_message"
                               android:scaleType="centerInside"
                               android:layout_height="40dp"/>
                    <TextView android:layout_width="match_parent"
                              android:gravity="center_vertical"
                              android:textColor="#333333"
                              android:layout_marginRight="5dp"
                              android:text="小心拿放,避免明火"
                              android:textSize="14sp"
                              android:layout_height="40dp"/>

                </LinearLayout>
            </LinearLayout>

            <View android:layout_width="match_parent"
                  android:layout_height="5dp"
                  android:background="@drawable/tag_line"/>
            <View android:layout_width="match_parent"
                  android:layout_height="5dp"
                  android:background="#f2f2f2"/>
            <RelativeLayout android:layout_width="match_parent"
                            android:paddingRight="15dp"
                            android:paddingLeft="15dp"
                            android:background="#ffffff"
                            android:layout_height="35dp">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_centerVertical="true"
                          android:text="订单产品:"
                          android:id="@+id/orderIDTV"
                          android:textSize="14sp"
                          android:textColor="#333333"/>
            </RelativeLayout>
            <com.htyhbz.yhyg.view.MyListView
                    android:id="@+id/orderMLV"
                    android:dividerHeight="3dp"
                    android:divider="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

            </com.htyhbz.yhyg.view.MyListView>
            <RelativeLayout android:layout_width="match_parent"
                            android:paddingRight="15dp"
                            android:background="#ffffff"
                            android:paddingLeft="15dp"
                            android:layout_height="40dp">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_centerVertical="true"
                          android:text="使用100积分"
                          android:textSize="14sp"
                          android:textColor="#333333"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_centerVertical="true"
                          android:text="已支付:"
                          android:layout_marginRight="5dp"
                          android:layout_toLeftOf="@+id/countTV"
                          android:textSize="14sp"
                          android:textColor="#333333"/>
                <TextView android:layout_width="wrap_content"
                          android:id="@+id/countTV"
                          android:layout_alignParentRight="true"
                          android:layout_height="wrap_content"
                          android:layout_centerVertical="true"
                          android:text="¥1000"
                          android:textStyle="bold"
                          android:textSize="16sp"
                          android:textColor="#f78648"/>
            </RelativeLayout>
            <View android:layout_width="match_parent"
                  android:layout_height="5dp"
                  android:layout_marginBottom="10dp"
                  android:background="#f2f2f2"/>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_marginBottom="20dp"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:layout_marginLeft="15dp"
                          android:text="订单状态:"
                          android:textSize="14sp"
                          android:layout_marginRight="5dp"
                          android:textColor="#333333"
                          android:layout_height="wrap_content"
                        />
                <TextView android:layout_width="wrap_content"
                          android:text="已支付,代配送"
                          android:textStyle="bold"
                          android:textSize="16sp"
                          android:textColor="#2e2e2e"
                          android:layout_height="wrap_content"
                        />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>