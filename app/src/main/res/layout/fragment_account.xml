<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="#ededed"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:background="#0398ff"
                  android:layout_height="96dp">
        <TextView android:layout_width="match_parent"
                  android:textColor="#ffffff"
                  android:textSize="18sp"
                  android:text="我的"
                  android:gravity="center"
                  android:layout_height="48dp"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_gravity="center_vertical"
                      android:layout_height="48dp">
            <LinearLayout android:layout_width="0dp"
                          android:gravity="center"
                          android:layout_weight="1"
                          android:orientation="horizontal"
                          android:layout_height="match_parent">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="账号:18753319519"
                          android:drawableLeft="@drawable/icon_account_telephone"
                          android:drawablePadding="5dp"
                          android:textColor="#ffffff"
                          android:textSize="14sp"
                        />
            </LinearLayout>
            <LinearLayout android:layout_width="0dp"
                          android:gravity="center"
                          android:layout_weight="1"
                          android:orientation="horizontal"
                          android:layout_height="match_parent">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="积分:10000积分"
                          android:drawableLeft="@drawable/icon_account_integration"
                          android:drawablePadding="5dp"
                          android:textColor="#ffffff"
                          android:textSize="14sp"
                        />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <ScrollView android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:background="#ffffff"
                android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="match_parent">
            <RelativeLayout android:layout_width="match_parent"
                            android:id="@+id/integralLiftingRL"
                            android:layout_height="48dp">
                <ImageView android:layout_width="48dp"
                           android:id="@+id/integralLiftingIV"
                           android:src="@drawable/icon_account_jifentixian"
                           android:scaleType="centerInside"
                           android:layout_height="48dp"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="积分提现"
                          android:layout_toRightOf="@+id/integralLiftingIV"
                          android:layout_centerVertical="true"
                          android:textColor="#333333"
                          android:textSize="14sp"
                        />
                <ImageView android:layout_width="48dp"
                           android:layout_alignParentRight="true"
                           android:src="@drawable/icon_right_arrow"
                           android:scaleType="centerInside"
                           android:layout_height="48dp"/>
            </RelativeLayout>
            <View android:layout_width="match_parent"
                  android:background="#e9e9e9"
                  android:layout_height="0.5dp"/>
            <RelativeLayout android:layout_width="match_parent"
                            android:id="@+id/orderSummaryRL"
                            android:layout_height="48dp">
                <ImageView android:layout_width="48dp"
                           android:id="@+id/orderSummaryIV"
                           android:src="@drawable/icon_account_search"
                           android:scaleType="centerInside"
                           android:layout_height="48dp"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="订单汇总查询"
                          android:layout_toRightOf="@+id/orderSummaryIV"
                          android:layout_centerVertical="true"
                          android:textColor="#333333"
                          android:textSize="14sp"
                        />
                <ImageView android:layout_width="48dp"
                           android:layout_alignParentRight="true"
                           android:src="@drawable/icon_right_arrow"
                           android:scaleType="centerInside"
                           android:layout_height="48dp"/>
            </RelativeLayout>
            <View android:layout_width="match_parent"
                  android:background="#e9e9e9"
                  android:layout_height="0.5dp"/>
            <RelativeLayout android:layout_width="match_parent"
                            android:id="@+id/currentRecordRL"
                            android:layout_height="48dp">
                <ImageView android:layout_width="48dp"
                           android:id="@+id/currentRecordIV"
                           android:src="@drawable/icon_account_record"
                           android:scaleType="centerInside"
                           android:layout_height="48dp"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="我的提现记录"
                          android:layout_toRightOf="@+id/currentRecordIV"
                          android:layout_centerVertical="true"
                          android:textColor="#333333"
                          android:textSize="14sp"
                        />
                <ImageView android:layout_width="48dp"
                           android:layout_alignParentRight="true"
                           android:src="@drawable/icon_right_arrow"
                           android:scaleType="centerInside"
                           android:layout_height="48dp"/>
            </RelativeLayout>
            <View android:layout_width="match_parent"
                  android:background="#e9e9e9"
                  android:layout_height="0.5dp"/>
            <RelativeLayout android:layout_width="match_parent"
                            android:id="@+id/modifyPasswordRL"
                            android:layout_height="48dp">
                <ImageView android:layout_width="48dp"
                           android:id="@+id/modifyPasswordIV"
                           android:src="@drawable/icon_account_changekeyboard"
                           android:scaleType="centerInside"
                           android:layout_height="48dp"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="修改密码"
                          android:layout_toRightOf="@+id/modifyPasswordIV"
                          android:layout_centerVertical="true"
                          android:textColor="#333333"
                          android:textSize="14sp"
                        />
                <ImageView android:layout_width="48dp"
                           android:layout_alignParentRight="true"
                           android:src="@drawable/icon_right_arrow"
                           android:scaleType="centerInside"
                           android:layout_height="48dp"/>
            </RelativeLayout>
            <View android:layout_width="match_parent"
                  android:background="#e9e9e9"
                  android:layout_height="0.5dp"/>
            <RelativeLayout android:layout_width="match_parent"
                            android:id="@+id/myCollectionRL"
                            android:layout_height="48dp">
                <ImageView android:layout_width="48dp"
                           android:id="@+id/myCollectionIV"
                           android:src="@drawable/icon_account_mycollection"
                           android:scaleType="centerInside"
                           android:layout_height="48dp"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="我的收藏"
                          android:layout_toRightOf="@+id/myCollectionIV"
                          android:layout_centerVertical="true"
                          android:textColor="#333333"
                          android:textSize="14sp"
                        />
                <ImageView android:layout_width="48dp"
                           android:layout_alignParentRight="true"
                           android:src="@drawable/icon_right_arrow"
                           android:scaleType="centerInside"
                           android:layout_height="48dp"/>
            </RelativeLayout>
            <View android:layout_width="match_parent"
                  android:background="#e9e9e9"
                  android:layout_height="0.5dp"/>

            <TextView android:layout_width="match_parent"
                      android:layout_marginLeft="20dp"
                      android:textSize="16sp"
                      android:text="登录"
                      android:id="@+id/loginTV"
                      android:layout_marginTop="50dp"
                      android:background="@drawable/ic_bg_account_login"
                      android:gravity="center"
                      android:textColor="#0398ff"
                      android:layout_marginRight="20dp"
                      android:layout_height="48dp"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>